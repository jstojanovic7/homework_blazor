@page "/0607ArrayMinMaxModule"

<h1>Min and Max</h1>
<p>
Enter several float values, divided by exactly one space character.
</p>
<table>
    <tr>
        <td>Array:</td>
        <td><input style="text-align:right" @bind="numbers"/></td>
    </tr>
    <tr>
        <td style="text-align:center" colspan="2">
            <button @onclick="MinimumMaximum">Minimum and maximum</button>  
        </td>
    </tr>
    <tr>
        <td>Minimum:</td>
        <td>@min</td>
    </tr>
    <tr>
        <td>Maximum:</td>
        <td>@max</td>
    </tr>
</table>

@code{
    private String numbers = "-2.3e3 1.2 23.5 -4.75 -3 7";
    private double min = double.PositiveInfinity;
    private double max = double.NegativeInfinity;

    private void MinimumMaximum()
    {
        double[] nums = DSS.Helpers.CleverArray.ArrayFromText(numbers);
        Console.Write("nums:");    
        for(int i=0; i< nums.Length; i++)
            Console.Write(nums[i] + ":");
        Console.WriteLine();
        int pos = DSS.Helpers.CleverArray.PositionOfMinimum(nums);
        min = nums[pos]; 
        pos = DSS.Helpers.CleverArray.PositionOfMaximum(nums);
        max = nums[pos];
    }
}

